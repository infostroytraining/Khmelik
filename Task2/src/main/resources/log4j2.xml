<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" packages="logging">

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="%highlight{%d{HH:mm:ss.SSS} [%t] %-5level %logger{36}:%method:%line - %msg%n}{FATAL=white, ERROR=red, WARN=blue, INFO=black, DEBUG=green, TRACE=blue}"/>
        </Console>

        <File name="DaoLogsFile" fileName="../webapps/logs/dao-log.txt">
            <PatternLayout
                    pattern="%highlight{%d{HH:mm:ss.SSS} [%t] %-5level %logger{36}:%method:%line - %msg%n}{FATAL=white, ERROR=red, WARN=blue, INFO=black, DEBUG=green, TRACE=blue}"/>
        </File>
        <ServerAppender name="serverAppender" server="http://localhost:8080/server-log-app/logs" >
            <PatternLayout
                    pattern="%highlight{%d{HH:mm:ss.SSS} [%t] %-5level %logger{36}:%method:%line - %msg%n}{FATAL=white, ERROR=red, WARN=blue, INFO=black, DEBUG=green, TRACE=blue}"/>
        </ServerAppender>
    </Appenders>

    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="Console"/>
            <!--<AppenderRef ref="serverAppender"/>-->
        </Root>
        <Logger name="dao">
            <AppenderRef ref="DaoLogsFile"/>
        </Logger>
    </Loggers>

</Configuration>